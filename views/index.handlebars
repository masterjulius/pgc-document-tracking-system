<div class="container">
	<div class="row">
		<form action="/users/login/" method="post" class="col s12">

			<div class="row">

				<div class="col s6 offset-s3">

				{{#if success_msg}}
					<div class="row">
						<div class="col s12">
							<div class="card teal">
								<div class="card-content white-text">
									<span class="card-title"></span>
									<p>{{success_msg}}</p>
								</div>
							</div>
						</div>
					</div>
				{{/if}}

					<div class="row">
						<div class="input-field col s12">
							<input type="text" name="username" id="username" class="validate" autofocus="autofocus">
							<label for="username">Username</label>
						</div>
					</div>

					<div class="row">
						<div class="input-field col s12">
							<input type="password" name="password" id="password" class="validate">
							<label for="password">Password</label>
						</div>
					</div>

					<div class="row">
						<div class="input-field col s12">
							<button class="btn btn-large red">LOGIN</button>
						</div>
					</div>

				</div>

			</div>

		</form>
	</div>
</div>
