<div class="row">
		
	<div class="nav-div">

		<nav class="dashboard-nav">
			<div class="nav-wrapper">
				<a href="/departments/new/" class="waves-effect waves-light btn"><strong>+</strong> NEW</a>
				<ul id="nav-mobile" class="right hide-on-med-and-down action-nav-link-group">
					<li>
						
						<form action="/departments/search/" method="post">
							<div class="row">
								<div class="col s12">
									<div class="input-field inline">
										<input type="text" name="search" id="search" class="validate" placeholder="Look for..." autofocus="autofocus">
									</div>
								</div>
							</div>
						</form>

					</li>
					<li><a href="/departments/logs/"><i class="fa fa-list-alt" aria-hidden="true"></i> LOGS</a></li>
					<li><a href="/departments/recycles/"><i class="fa fa-trash" aria-hidden="true"></i> RECYCLES</a></li>
				</ul>
			</div>
		</nav>

	</div>

	<div class="dashboard-content">

		<div class="data-div">
			
			<table class="highlight">
				<thead>
					<tr>
						<th>Accronym</th>
						<th>Name</th>
						<th>Description</th>
						<th>Date Added</th>
						<th>Options</th>
					</tr>
				</thead>

				<tbody>
				{{#each data}}
					<tr>
						<td>{{name}}</td>
						<td>{{fullName}}</td>
						<td>{{description}}</td>
						<td>{{createdDate}}</td>
						<td><a href="/departments/edit/{{_id}}" class="tooltipped" data-position="bottom" data-delay="50" data-tooltip="Edit"><i class="fa fa-pencil" aria-hidden="true"></i></a> | <a href="/departments/delete/{{_id}}" class="red-text tooltipped" data-position="bottom" data-delay="50" data-tooltip="Delete"><i class="fa fa-ban" aria-hidden="true"></i></a></td>
					</tr>
				{{else}}
					<tr>
						<td>No Data Available...</td>
						<td>No Data Available...</td>
						<td>No Data Available...</td>
						<td>No Data Available...</td>
						<td>No Options Available...</td>
					</tr>
				{{/each}}	
				</tbody>
			</table>

		</div>

	</div>

</div>