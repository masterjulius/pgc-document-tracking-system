{{#if data}}
<div class="row">
	
	<div class="col s8 offset-s2">
		
		<form action="/departments/edit/" method="post" class="col s12">

			<input type="hidden" name="_id" value="{{data._id}}">
			
			<div class="row">

				<div class="input-field">
					<input type="text" name="name" id="name" value="{{data.name}}" class="input-office-accronym validate" autofocus="autofocus">
					<label for="name">Accronym*</label>
				</div>

				<div class="input-field">
					<input type="text" name="fullName" id="fullName" value="{{data.fullName}}" class="validate">
					<label for="fullName">Complete Name*</label>
				</div>

				<div class="input-field">
					<textarea name="description" id="description" class="materialize-textarea">{{data.description}}</textarea>
					<label for="description">Description</label>
				</div>

				<div class="input-field">
					<button class="btn btn-large">save</button>
				</div>

			</div>

		</form>

	</div>

</div>
{{/if}}