<div class="row">
		
	<div class="nav-div">

		<nav class="dashboard-nav">
			<div class="nav-wrapper">
				<a href="/documents/types/new/" class="waves-effect waves-light btn"><strong>+</strong> NEW</a>
				<ul id="nav-mobile" class="right hide-on-med-and-down action-nav-link-group">
					<li>
						
						<form action="/documents/types/search/" method="post">
							<div class="row">
								<div class="col s12">
									<div class="input-field inline">
										<input type="text" name="search" id="search" class="validate" placeholder="Look for..." autofocus="autofocus">
									</div>
								</div>
							</div>
						</form>

					</li>
					<li><a href="/documents/types/logs/"><i class="fa fa-list-alt" aria-hidden="true"></i> LOGS</a></li>
					<li><a href="/documents/types/recycles/"><i class="fa fa-trash" aria-hidden="true"></i> RECYCLES</a></li>
				</ul>
			</div>
		</nav>

	</div>

	<div class="dashboard-content">

		<div class="row">
			<div class="col s12" id="document-type-preloader"></div>
		</div>

		<div class="row" id="document-type-container">
			
		{{#if data}}
			{{#each data}}

			<div class="col s3 document-types-each" data-index="{{@index}}">
				<a href="/documents/types/{{_id}}">
					<!-- <div class="card blue-grey darken-1"> -->
					<div class="card {{../colors.[0]}}">
						<div class="card-content white-text">
							<span class="card-title">{{name}}</span>
							<p>{{description}}</p>
						</div>
						<div class="card-action">
							<a href="#">This is a link</a>
							<a href="#">This is a link</a>
						</div>
					</div>
				</a>	
			</div>	

			{{/each}}
		{{/if}}

		</div>

		<!-- Floating Button -->
		<div class="fixed-action-btn">
			<a href="#modalCreateNew" class="btn-floating waves-effect waves-light btn-large modal-trigger red">
				<i class="fa fa-plus" aria-hidden="true"></i>
			</a>
		</div>

		<!-- And this is the target modal for that floating button -->
  		<!-- Modal Structure -->
		<div id="modalCreateNew" class="modal col s4 offset-s2 modal-fixed-footer">
  			<div class="modal-content">
				<h4>Create type</h4>
				
				<form action="" id="form-add-type">
					
					<div class="row">
						<div class="col s12 input-field">
							<input type="text" name="name" id="name" class="validate">
							<label for="name">Name*</label>
						</div>
					</div>

					<div class="row">
						<div class="col s12 input-field">
							<textarea name="description" id="description" class="materialize-textarea"></textarea>
							<label for="description">Description</label>
						</div>
					</div>

				</form>

			</div>
			<div class="modal-footer">
				<a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat btn-ajax" id="btn-save-types">Save</a>
				<a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat btn-ajax">Cancel</a>
			</div>
		</div>
  		<!-- End of the target modal for that floating button -->

	</div>

</div>

<script type="text/javascript" src="/virtualpath/js/jquery.matchHeight-min.js"></script>
<script type="text/javascript" src="/virtualpath/js/ajax.js"></script>
<script type="text/javascript">
	$('.document-types-each').matchHeight();
	$('#btn-save-types').on('click', function(e){e.preventDefault();types.save('new', '#document-type-container', '#document-type-preloader')});
</script>