<!-- MODAL BOTTOM -->
<div id="modal1" class="modal bottom-sheet">
	<div class="modal-content">
		<h5>New Document Field</h5>
		<form action="" id="form-add-field">
			<div class="row">
				<div class="col s12 input-field">
					<input type="text" name="name" id="name" class="validate">
					<label for="name">Field Name</label>
				</div>

				<div class="col s12 input-field">
					<input type="text" name="description" id="description" class="validate">
					<label for="description">Description</label>
				</div>

				<div class="col s12 input-field">
					<select id="inputType">
						<option value="txtBox" disabled selected>&mdash; Choose your option &mdash;</option>
						<option value="txtBox">Textbox</option>
						<option value="longTxt">Large Text</option>
						<option value="auto">Autocomplete</option>
						<option value="drop">Dropdown</option>
					</select>
					<label>Select Field Type</label>
				</div>

				<div class="col s12 input-field">
					
					<select id="defaults">
						<optgroup label="team 1">	
							<option value="0" disabled selected>&mdash; Choose your option &mdash;</option>
							<option value="currentDate">Date Today</option>
							<option value="Y">Yes</option>
							<option value="N">No</option>
						</optgroup>
						<optgroup label="team 2">	
							<option value="custom">Custom</option>
						</optgroup>
					</select>	

					<label>Select Field Type</label>

				</div>

				<div class="col s12 input-field">
					
					<select id="valueTable">
						<option value="dept" disabled selected>&mdash; Choose your option &mdash;</option>
						<option value="dept">Department</option>
						<option value="div">Division</option>
						<option value="emp">Employee</option>
						<option value="otherGovAgencies">Other Government Agencies</option>
					</select>
					<label>Select Value Table</label>

				</div>

			</div>
		</form>
	</div>
	<div class="modal-footer">
		<a href="#!" id="btn-save-field" class="modal-action modal-close waves-effect waves-green btn blue">Save</a>
	</div>
</div>

